<resources>
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">#333333</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CalcButton.Number" parent="CalcButton">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CalcButton.Operator" parent="CalcButton">
        <item name="android:textColor">#FFD700</item>
    </style>

    <style name="CalcButton.Red" parent="CalcButton">
        <item name="android:textColor">#FF6B6B</item>
    </style>

    <style name="CalcButton.Green" parent="CalcButton">
        <item name="android:textColor">#1DD1A1</item>
    </style>
</resources>
